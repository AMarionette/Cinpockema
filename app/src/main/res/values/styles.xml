<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <drawable name="ActionBar">@color/Red</drawable>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#ffe81903</item>
    </style>

    <style name="MovieFragmentTitle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>


    <color name="White">#fafafa</color>
    <color name="Gray">#f0f0f0</color>
    <color name="DarkRed">#ffc90000</color>
    <color name="Red">#ffe81903</color>
    <color name="Black">#080100</color>
    <color name="Orange">#f2a60e</color>
    <color name="DarkGray">#ff474345</color>

    <style name="MovieFragmentTitle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MovieFragmentTitle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MovieFragmentTitle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
