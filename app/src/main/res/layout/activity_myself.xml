<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:background="@drawable/login" />

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        >

        <ImageButton
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:id="@+id/want_to_see"
            android:background="@drawable/xiangkan"
            android:clickable="true"
            android:layout_margin="2dp" />

        <ImageButton
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:id="@+id/have_seen"
            android:background="@drawable/kanguo"
            android:clickable="true"
            android:layout_margin="2dp" />

        <ImageButton
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:id="@+id/comments"
            android:background="@drawable/yingping"
            android:clickable="true"
            android:layout_margin="2dp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/my_order"
        android:background="@drawable/wodedingdan"
        android:layout_margin="2dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/unconsumed"
            android:background="@drawable/weixiaofei"
            android:layout_margin="2dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/wait_to_pay"
            android:layout_margin="2dp"
            android:background="@drawable/daifukuan" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/wait_to_comment"
            android:layout_margin="2dp"
            android:background="@drawable/daipingjia" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/refund"
            android:layout_margin="2dp"
            android:background="@drawable/tuikuan" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/my_massage"
            android:layout_marginTop="8dp"
            android:background="@drawable/wodexiaoxi"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/vip_center"
            android:background="@drawable/huiyuanzhongxin"
            android:layout_margin="2dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/my_achievement"
            android:layout_margin="2dp"
            android:background="@drawable/wodechengjiu" />
    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/settinig"
        android:focusable="false"
        android:background="@drawable/shezhi"
        android:layout_margin="2dp" />

</LinearLayout>
